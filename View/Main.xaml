<Window x:Class="Assignment_2.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_2.View"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*" MinWidth="150"/>
                <ColumnDefinition Width="500*" MinWidth="300"/>
                <ColumnDefinition Width="300*" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            <local:ResearcherListView x:Name="ResearcherListView" Grid.Column="1"/>
            
        </Grid>
    </DockPanel>

</Window>
